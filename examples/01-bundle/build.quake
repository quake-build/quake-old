if (which pandoc | is-empty) {
    error make {msg: "pandoc must be installed"}
}

def-task compile {
    cargo build
}

def-task render-docs {
    sources ["in.md"]
    produces ["out.html"]
} {
    pandoc --quiet -o out.html in.md
}

def-task -d bundle {
    depends compile
    depends render-docs
}

def-task clean {
    cargo clean
    rm -f out.html
}
